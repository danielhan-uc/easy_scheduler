<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <% @posts.each do |post| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%=image_tag post.picture.url(:square) %>
            <div class="caption">
              <h3><%= post.title %></h3>
              <p> <%= post.description %> </p>
              <p> <%= post.address %> </p>
              <p> <%= "$#{post.price}"%> </p>
              <p> <%= "#{post.startdate} ~ #{post.enddate}" %> </p>
              <%= link_to 'Details', post, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>
