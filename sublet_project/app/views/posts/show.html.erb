<p id="notice"><%= notice %></p>

<%= image_tag @post.picture.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @post.address %>
</p>

<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>

<p>
  <strong>Startdate:</strong>
  <%= @post.startdate %>
</p>

<p>
  <strong>Enddate:</strong>
  <%= @post.enddate %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @post.owner %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @post.phone %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br>
<h2> Comments </h2>
<% if @post.comments.empty? %>
  <div class="container">
    <h5> Be the first to add a comment! </h5>
  </div>
<% else %>
  <% @post.comments.each do |comment| %>
    <h3><%=comment.description%></h3>
  <% end %>
<% end %>
<!--- new comment path -->
<a class="btn btn-success" href="/posts/<%= @post.id %>/comments/new"> Add comment </a>
