<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.users.each do |user| %>
    <tr>
        <td><%= user.name %></td>
    <tr>
    <% end %>
  </tbody>
</table>

<% if logged_in? %>
    <%= link_to 'Leave', "/groups/#{@group.id}/users", :method => :delete %>
    <%= link_to 'Join', "/groups/#{@group.id}/users", :method => :post %>
  <% if GroupsUser.where(user_id: current_user.id, group_id: @group.id).present? %>
  <% else %>
  <% end %>
<% end %>
<%= link_to 'Back', groups_path %>
