<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% user_statuses = Status.where(user_id: @user.id) %>
    <% user_statuses.each do |status| %>
      <tr>
        <td><%= status.text %></td>
        <% if logged_in? && current_user.id == @user.id %>
        <td><%= link_to 'Edit', "/statuses/#{status.id}/edit" %></td>
        <td><%= link_to 'Destroy', "/statuses/#{status.id}", method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if logged_in? && current_user.id == @user.id %>
<%= link_to 'New Status', new_status_path %> |
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', users_path %>
